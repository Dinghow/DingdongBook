
@{
    ViewBag.Title = "Order_Process";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <link rel="stylesheet" href="/Content/fonts.css">
    <link rel="stylesheet" href="/Content/bootstrap.css">
    <link rel="stylesheet" href="/Content/shared.css">
    <link rel="stylesheet" href="/Content/order_complete.css">
    <link rel="stylesheet" type="text/css" href="/Content/shared.css">

    <script type="text/javascript" src="/Scripts/jquery.min.js"></script>
    <script type="text/javascript" src="/Scripts/bootstrap.min.js"></script>
</head>

<body>
    <div class="top-hover">
        <div class="register_login">
            <em>您好,</em>
            @if (ViewBag.user_auth == 0)
            {
                <a href="/Home/Login/">会员登录/快速注册</a>
            }
            else
            {
                <a href="/Home/Logout/">@ViewBag.user_name,退出</a>
            }
        </div>
        <div class="vip_center">
            @if (ViewBag.user_auth == 1)
            {
                <a href="/Individual/Index/">个人中心</a>
            }
        </div>
    </div>
    <header class="logo-line clearfix">
        <a href="~/"><img src="/Images/logo.png" alt="" class="logo"></a>
        <ol id="procedure" class="crumb-nav float-right">
            <li class="crumb-nav-item">我的购物车</li>
            <li class="crumb-nav-item">填写订单</li>
            <li class="crumb-nav-item current-item">完成订单</li>
        </ol>
    </header>
    <main style="min-height:500px">
        <div class="order-complete">
            <div class="rounded complete-message">
                <svg width="120" height="120" class="completesvg">
                    <path class="outer-path" stroke="red" d="M 60 60 m 0 -50 a 50 50 0 1 1 0 100 a 50 50 0 1 1 0 -100" style="stroke-linecap: round; stroke-width: 4; fill: none;"></path>
                    <path class="inner-path" stroke="rgba(100, 100, 100, 0.5)" d="M 60 60 m 0 -30 a 30 30 0 1 1 0 60 a 30 30 0 1 1 0 -60" style="stroke-linecap: round; stroke-width: 4; fill: none;"></path>
                    <path class="success-path" stroke="red" d="M 60 10 A 50 50 0 0 1 91 21 L 75 45 L 55 75 L 45 65" style="stroke-dasharray: 45.0, 67.536; stroke-dashoffset: 45.024;  stroke-linecap: round; stroke-width: 4; fill: none;"></path>
                </svg>
                <div>
                    <h4>订单已成功提交，正等待处理！</h4>
                    <a href="~/" class="btn btn-link float-right"><i class="material-icons">reply</i>继续购物</a>
                </div>
            </div>
        </div>
    </main>
    <footer class="footer col">
        <ul class="row">
            <li class="col-4">
                <span>关于我们</span>
                <p>地址：中国 上海曹安公路4800号同济大学软件学院</p>
                <p>邮编：201804</p>
                <p>联系电话：86-21-69589585,69589332(FAX)</p>
                <a href="#">关于我们</a>
            </li>
            <li class="col-2">
                <span>项目公开</span>
                <a href="https://github.com/Dinghow/DingdongBook" target="_blank">GitHub</a>
            </li>
            <li class="col-3">
                <span>广告位招租</span>
                <a href="#">空缺</a>
                <a href="#">空缺</a>
                <a href="#">空缺</a>
                <a href="#">空缺</a>
                <a href="#">空缺</a>
            </li>
            <li class="col-3">
                <span>救救软院生</span>
                <img src="/Images/code.png" alt="">
            </li>
        </ul>
        <div class="footer-links text-center">
            <p class="">
                友情链接：
                <a href="https://www.tongji.edu.cn" target="_blank">同济大学</a>
