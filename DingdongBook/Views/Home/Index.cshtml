                'top': '42',
                'opacity': '1'
            }, 200)

            //购物车
            $(".sping_car").hover(function () {
                $(".myCar").css("display", "block");
                $(".sping_car").addClass("mouseOnShow");
                $(".sping_car c").removeClass("down").addClass("mouseOnUp");
            }, function () {
                $(".sping_car").removeClass("mouseOnShow");
                $(".sping_car c").removeClass("mouseOnUp").addClass("down");
                $(".myCar").css("display", "none");
            });

            $(".myCar").hover(function () {
                $(".sping_car c").removeClass("down").addClass("mouseOnUp");
                $(".sping_car").addClass("mouseOnShow");
                $(".myCar").css("display", "block");
            }, function () {
                $(".sping_car").removeClass("mouseOnShow");
                $(".sping_car c").removeClass("mouseOnUp").addClass("down");
                $(".myCar").css("display", "none");
            });

            $(".sping_myben").hover(function () {
                $(".myBen").css("display", "block");
                $(".sping_myben").addClass("mouseOnShow");
                $(".sping_myben c").removeClass("down").addClass("mouseOnUp");
            }, function () {
                $(".sping_myben").removeClass("mouseOnShow");
                $(".sping_myben c").removeClass("mouseOnUp").addClass("down");
                $(".myBen").css("display", "none");
            });

            $(".myBen").hover(function () {
                $(".sping_myben c").removeClass("down").addClass("mouseOnUp");
                $(".sping_myben").addClass("mouseOnShow");
                $(".myBen").css("display", "block");
            }, function () {
                $(".sping_myben").removeClass("mouseOnShow");
                $(".sping_myben c").removeClass("mouseOnUp").addClass("down");
                $(".myBen").css("display", "none");
            });

            //商品展示
            /* $(".productShow .currency ul li:first").css("border-left","1px solid #C2D58F"); */
            $("#productUl .dog").hover(function () {
                $("#productUl ul li").removeClass("xuanzhong");
                $(this).addClass("xuanzhong");
            }, function () {

            });
            $(".hide_add ul li a").click(function () {
                var html = $(this).html();
                $(".dis_add span").html(html);
            });
        })

    </script>


