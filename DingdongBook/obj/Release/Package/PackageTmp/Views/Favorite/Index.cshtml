@{
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" type="text/css" href="/Content/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/Content/favorite.css">
    <link rel="stylesheet" type="text/css" href="/Content/shared.css">
    <script type="text/javascript" src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/jquery.min.js"></script>
    <script type="text/javascript" src="/Scripts/favorite.js"></script>
    <title></title>
</head>

<body>
    <div class="top-hover">
        <div class="register_login">
            <em>您好,</em>
            @if (ViewBag.user_auth == 0)
            {
                <a href="/Home/Login/">会员登录/快速注册</a>
            }
            else
            {
                <a href="/Home/Logout/">@ViewBag.user_name,退出</a>
            }
        </div>
        <div class="vip_center">
            @if (ViewBag.user_auth == 1)
            {
                <a href="/Favorite/Index?id=@ViewBag.user_id">我的收藏</a>
                <a href="/Carts/Index?id=@ViewBag.user_id">我的购物车</a>
                <a href="/Individual/Index/">个人中心</a>
            }
        </div>
    </div>
    <header class="logo-line clearfix">
        <a href="~/"><img src="/Images/logo.png" alt="" class="logo"></a>
        <h3 class=" header-title">收藏夹</h3>
    </header>

    <div class="container clearfix">
        <div class="clearfix">
            <div class="btn-group top-group" role="group">
                <button type="button" class="btn btn-danger" id="button-1">缩略形式</button>
                <button type="button" class="btn btn-default" id="button-2">详细形式</button>
            </div>

            <nav aria-label="breadcrumb" class="top-control float-right control-ol">
                <ol class="breadcrumb ">
                    <li class="breadcrumb-item top-control-button control">管理藏书</li>
                </ol>
            </nav>
            <nav aria-label="breadcrumb" class="top-control float-right select-ol">
                <ol class="breadcrumb ">
                    <li class="breadcrumb-item top-control-button select-all">全选</li>
                    <li class="breadcrumb-item top-control-button delete" id="delete-selected">删除</li>
                    <li class="breadcrumb-item top-control-button cancle">取消</li>
                </ol>
            </nav>
        </div>
        <div id="display-scane-favorite">
            <div id="detail">
                @for (int i = 0; i < ViewBag.num; i++)
                {
                    <div class="card card-detail" name="book-@i" data-bookid=@ViewBag.list[i].ID>
                        <div class="card-body">
                            <img src="/Images/books/@ViewBag.list[i].IMAGE">
                            <div class="card-introduce">
                                <h5 class="book-name">@ViewBag.list[i].NAME</h5>
                                <p class="book-introduce">
                                    @ViewBag.list[i].ABSTRACT
                                </p>
                                <p class="book-detail">作者:@ViewBag.writer[i]&emsp;&emsp;&emsp;出版社:@ViewBag.list[i].PUBLISHER</p>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div id="omit">
                @for (int i = 0; i < ViewBag.num; i++)
                {
                    <div class="card card-omit" name="book-@i" data-bookid=@ViewBag.list[i].ID>
                        <img src="/Images/books/@ViewBag.list[i].IMAGE" class="card-header">
                        <p class="card-body">@ViewBag.list[i].NAME</p>
                        <a href="~/books/index?id=@ViewBag.list[i].ID"><button class="card-body btn btn-danger">详情</button></a>
                    </div>
                }

            </div>
        </div> <!--display-scane-order-->
    </div> <!--container-->
    <footer class="footer col">
        <ul class="row">
            <li class="col-4">
                <span>关于我们</span>
                <p>地址：中国 上海曹安公路4800号同济大学软件学院</p>
                <p>邮编：201804</p>
                <p>联系电话：86-21-69589585,69589332(FAX)</p>
                <a href="#">关于我们</a>
            </li>
            <li class="col-2">
                <span>项目公开</span>
                <a href="https://github.com/Dinghow/DingdongBook" target="_blank">GitHub</a>
            </li>
            <li class="col-3">
                <span>广告位招租</span>
                <a href="#">空缺</a>
                <a href="#">空缺</a>
                <a href="#">空缺</a>
                <a href="#">空缺</a>
                <a href="#">空缺</a>
            </li>
            <li class="col-3">
                <span>救救软院生</span>
                <img src="/Images/code.png" alt="">
            </li>
        </ul>
        <div class="footer-links text-center">
            <p class="">
                友情链接：
                <a href="https://www.tongji.edu.cn" target="_blank">同济大学</a>
                <a href="http://sse.tongji.edu.cn" target="_blank">同济大学软件学院</a>
                <a href="http://sse.tongji.edu.cn/teacher/FACULTY/hpc/index.html" target="_blank">袁阿姨实验室</a>
            </p>
            <p>Tongji University, Copyright&copy; 2018, Database Course Project</p>
        </div>
    </footer>
</body>
</html>
